DATABASE_URL="postgresql://user:password@localhost:5432/auction_db"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Logging Configuration
# Options: debug, info, warn, error, none
# Default: info (development), warn (production)
LOG_LEVEL="info"

# Memory Monitoring Configuration
# Check interval in milliseconds (default: 120000 = 2 minutes)
MEMORY_CHECK_INTERVAL="120000"
# Threshold in MB to warn about high memory usage (default: 400)
MEMORY_THRESHOLD_MB="400"

# Socket Configuration
# Enable socket timeout for inactive users (default: true)
SOCKET_TIMEOUT_ENABLED="true"
